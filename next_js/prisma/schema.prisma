generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("SUPABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model User {
  id String @default(cuid()) @id
  name String @unique
  email String @unique
  state String @default("user")
  image String?
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

